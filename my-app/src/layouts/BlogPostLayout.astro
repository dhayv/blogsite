---
import BaseLayout from './BaseLayout.astro';
import TagBadge from '../components/TagBadge.astro';
import { getReadingTime } from '../utils/reading-time';

interface Props {
  title: string;
  date: Date;
  author: string;
  tags: string[];
  body: string;
}

const { title, date, author, tags, body } = Astro.props;
const readingTime = getReadingTime(body);

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | David Hyppolite's Blog`} description={title}>
  <article>
    <header class="mb-6 border-b border-gray-200 dark:border-gray-700/60 pb-6">
      <h1 class="text-4xl font-bold tracking-tight mb-4">{title}</h1>
      <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600 dark:text-gray-400">
        {author && <span>By {author}</span>}
        <span>&middot;</span>
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span>&middot;</span>
        <span>{readingTime} min read</span>
      </div>
      {tags.length > 0 && (
        <ul class="flex flex-wrap gap-2 mt-4 list-none pl-0" aria-label="Tags">
          {tags.map((tag) => <li><TagBadge tag={tag} /></li>)}
        </ul>
      )}
    </header>
    <div class="prose max-w-none dark:prose-invert">
      <slot />
    </div>
  </article>
</BaseLayout>
