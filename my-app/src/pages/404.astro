---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found | David Hyppolite's Blog">
  <div class="flex flex-col items-center justify-center text-center space-y-8 py-24">
    <div aria-hidden="true" class="text-8xl font-bold text-gray-200 dark:text-gray-700 select-none">404</div>
    <h1 class="text-3xl font-semibold tracking-tight">Page Not Found</h1>
    <p class="text-gray-600 dark:text-gray-400 max-w-md text-lg">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-block px-8 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-colors text-base font-medium"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
